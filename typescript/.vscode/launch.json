    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch w/ ts-node",
            "protocol": "inspector",
            "args": ["${workspaceRoot}/program.ts", "/media/DMZ/Queue/", "/media/DMZ-1/Queue/"],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": ["-r", "ts-node/register"],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch w/ Node Compile",
            "program": "${workspaceFolder}\\program.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}